{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },  
  "extends": [
  ],
  "plugins": [
  ],
  "env": {
    "node" : true,
    "es6": true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : 0,
    "max-len"              : [2, 120, 2],
    "object-curly-spacing" : [2, "always"],
    "space-before-function-paren": 0
  }
}
